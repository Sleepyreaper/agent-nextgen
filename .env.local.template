# Azure SQL Database Configuration (Primary Database)
SQL_SERVER=your-sql-server.database.windows.net
SQL_DATABASE=your-sql-database
SQL_AUTH_METHOD=entra  # Use 'entra' for Azure Entra ID (recommended) or 'sql' for SQL authentication
SQL_USERNAME=your_sql_admin_username  # Only needed if using SQL authentication
SQL_PASSWORD=your_sql_admin_password  # Only needed if using SQL authentication

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_DEPLOYMENT_NAME=your-gpt-deployment-name
AZURE_API_VERSION=2024-12-01-preview

# Azure Subscription and Resource Group
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group

# Azure Storage Configuration (for file uploads)
# NOTE: Only account name is needed — runtime uses Entra ID (DefaultAzureCredential).
# Key-based access is disabled on the storage account.
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# Container prefix — leave blank for production, set to "staging-" for staging slot
# AZURE_STORAGE_CONTAINER_PREFIX=staging-

# Flask Configuration
FLASK_SECRET_KEY=your-random-secret-key-here
FLASK_ENV=development

# Port Configuration
PORT=5002

